# XMRT-Ecosystem Configuration - FULLY ACTIVATED SYSTEM
# Copy this file to .env and fill in your actual values

# ================================
# üîê CORE APPLICATION SETTINGS
# ================================
SECRET_KEY=your-ultra-secure-secret-key-change-this-in-production
FLASK_DEBUG=false
HOST=0.0.0.0
PORT=5000

# ================================
# ü§ñ AI MODEL CONFIGURATIONS
# ================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Google Gemini API Configuration  
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ================================
# üß† AUTONOMOUS LEARNING SYSTEM
# ================================
ENABLE_REAL_TIME_LEARNING=true
LEARNING_RATE=0.01
PERFORMANCE_THRESHOLD=0.85
OPTIMIZATION_ALGORITHM=adaptive_gradient
MEMORY_RETENTION_DAYS=30
MAX_CONCURRENT_TASKS=10

# Learning System Features
ENABLE_HYPERPARAMETER_TUNING=true
ENABLE_MODEL_COMPRESSION=true
ENABLE_ADAPTIVE_LEARNING=true
ENABLE_CROSS_SESSION_MEMORY=true

# ================================
# ü§ñ MULTI-AGENT SYSTEM
# ================================
ENABLE_MULTI_AGENT=true
MAX_AGENTS=5
COORDINATION_INTERVAL=30
TASK_TIMEOUT=300
AGENT_COMMUNICATION_ENABLED=true
AGENT_LEARNING_ENABLED=true

# Agent Types (comma-separated)
AGENT_TYPES=coordinator,researcher,analyst,coder,optimizer,monitor

# ================================
# üîó GITHUB INTEGRATION
# ================================
GITHUB_TOKEN=your-github-personal-access-token-here
GITHUB_OWNER=DevGruGold
GITHUB_REPO=XMRT-Ecosystem
GITHUB_BRANCH=main

# GitHub Automation Features
ENABLE_AUTO_COMMITS=false
ENABLE_PR_AUTOMATION=false
ENABLE_ISSUE_TRACKING=true
ENABLE_GITHUB_AUTOMATION=true
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# ================================
# üóÑÔ∏è DATABASE & MEMORY SYSTEM
# ================================
# Supabase Configuration (Primary Database)
SUPABASE_URL=your-supabase-project-url-here
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Memory System Features
ENABLE_VECTOR_SEARCH=true
ENABLE_SEMANTIC_MEMORY=true
MEMORY_COMPRESSION=true
ENABLE_MEMORY_CLUSTERING=true

# PostgreSQL (Alternative/Additional Database)
DATABASE_URL=postgresql://username:password@localhost:5432/xmrt_ecosystem
POSTGRES_USER=xmrt_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=xmrt_ecosystem

# ================================
# üìä ANALYTICS & MONITORING
# ================================
ANALYTICS_RETENTION_DAYS=90
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_USER_BEHAVIOR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ANOMALY_DETECTION=true

# Metrics Collection
ENABLE_CUSTOM_METRICS=true
METRICS_EXPORT_INTERVAL=60
ENABLE_PERFORMANCE_PROFILING=true

# ================================
# üåê EXTERNAL INTEGRATIONS
# ================================
# Redis Configuration (Caching & Session Store)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-here
ENABLE_REDIS_CACHING=true

# Elasticsearch (Search & Analytics)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Message Queue (Celery/RQ)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
ENABLE_BACKGROUND_TASKS=true

# ================================
# üìß COMMUNICATION & NOTIFICATIONS
# ================================
# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token-here
DISCORD_GUILD_ID=your-discord-server-id
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Slack Integration  
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=your-slack-webhook-url

# ================================
# üîí SECURITY & AUTHENTICATION
# ================================
# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
