# XMRT-Ecosystem Enhanced Production Environment Configuration
# Copy this file to .env and configure your production values

# === CORE APPLICATION SETTINGS ===
SECRET_KEY=xmrt-ecosystem-production-secret-key-2024
FLASK_DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production
APP_VERSION=2.1.0
HOST=0.0.0.0
PORT=5000
CORS_ORIGINS=*

# === AI API KEYS (REQUIRED FOR FULL FUNCTIONALITY) ===
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get OpenAI API key from: https://platform.openai.com/api-keys  
OPENAI_API_KEY=your_openai_api_key_here

# === GITHUB INTEGRATION (REQUIRED FOR AUTONOMOUS FEATURES) ===
# GitHub Personal Access Token with repo permissions
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=DevGruGold
GITHUB_REPO=XMRT-Ecosystem
GITHUB_BRANCH=main
GITHUB_RATE_LIMIT=5000
ENABLE_GITHUB_AUTO_DEPLOY=true
ENABLE_GITHUB_WEBHOOKS=true
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# === MEMORY PERSISTENCE (RECOMMENDED FOR LEARNING) ===
# Supabase configuration for persistent learning storage
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPABASE_TABLE_PREFIX=xmrt_ecosystem

# === AUTONOMOUS SYSTEM ACTIVATION ===
ENABLE_AUTONOMOUS_LEARNING=true
ENABLE_MULTIAGENT_SYSTEM=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_MEMORY_PERSISTENCE=true
ENABLE_REALTIME_LEARNING=true
ENABLE_ADVANCED_LOGGING=true
ENABLE_CONTINUOUS_DEPLOYMENT=true
ENABLE_ADAPTIVE_LEARNING=true
ENABLE_COLLABORATIVE_AGENTS=true

# === ADVANCED AI CAPABILITIES ===
ENABLE_CODE_GENERATION=true
ENABLE_SMART_REFACTORING=true
ENABLE_AUTOMATED_TESTING=true
ENABLE_PERFORMANCE_OPTIMIZATION=true
ENABLE_SECURITY_ANALYSIS=true
ENABLE_DOCUMENTATION_GENERATION=true

# === PERFORMANCE AND RESOURCE MANAGEMENT ===
MAX_CONCURRENT_TASKS=5
LEARNING_CYCLE_INTERVAL=1800
MEMORY_CLEANUP_INTERVAL=43200
MEMORY_LIMIT_MB=1024
CPU_LIMIT_PERCENT=85
DISK_LIMIT_MB=2048

# === REAL-TIME COMMUNICATION ===
SOCKETIO_PING_TIMEOUT=120
SOCKETIO_PING_INTERVAL=30
SOCKETIO_LOGGING=false
ENABLE_WEBSOCKET_CLUSTERING=true

# === MONITORING AND ANALYTICS ===
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_FILE_LOGGING=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ERROR_TRACKING=true
LOG_RETENTION_DAYS=30

# === SECURITY CONFIGURATION ===
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=1000
ENABLE_REQUEST_VALIDATION=true
ENABLE_CORS_VALIDATION=true
SECURITY_HEADERS_ENABLED=true

# === DEPLOYMENT SAFETY ===
# Enhanced deployment safety measures
DEPLOYMENT_SAFETY_ENABLED=true
REQUIRE_HEALTH_CHECK=true
ROLLBACK_ON_ERROR=true
GRACEFUL_SHUTDOWN_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60
ENABLE_CIRCUIT_BREAKER=true

# === MULTI-AGENT COORDINATION ===
AGENT_POOL_SIZE=3
ENABLE_AGENT_COLLABORATION=true
AGENT_TASK_TIMEOUT=300
ENABLE_AGENT_LEARNING=true
AGENT_MEMORY_SHARED=true

# === BLOCKCHAIN INTEGRATION (FUTURE) ===
ENABLE_BLOCKCHAIN_FEATURES=false
WEB3_PROVIDER_URL=
SMART_CONTRACT_ADDRESS=
ENABLE_DAO_GOVERNANCE=false

# === DEVELOPMENT AND DEBUGGING ===
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_MEMORY_PROFILING=false
ENABLE_SQL_LOGGING=false
