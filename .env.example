# XMRT-Ecosystem Enhanced Environment Configuration
# Copy this file to .env and configure your values

# === CORE APPLICATION SETTINGS ===
SECRET_KEY=your-secret-key-change-in-production
FLASK_DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production
APP_VERSION=2.0.0

# === SERVER CONFIGURATION ===
HOST=0.0.0.0
PORT=5000
CORS_ORIGINS=*

# === AI API KEYS (REQUIRED) ===
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# === GITHUB INTEGRATION (OPTIONAL) ===
# GitHub Personal Access Token for repository management
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=DevGruGold
GITHUB_REPO=XMRT-Ecosystem
GITHUB_BRANCH=main
GITHUB_RATE_LIMIT=5000
ENABLE_GITHUB_AUTO_DEPLOY=false

# === MEMORY PERSISTENCE (OPTIONAL) ===
# Supabase configuration for persistent memory
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# === FEATURE FLAGS ===
ENABLE_AUTONOMOUS_LEARNING=true
ENABLE_MULTIAGENT_SYSTEM=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_MEMORY_PERSISTENCE=true
ENABLE_REALTIME_LEARNING=true
ENABLE_ADVANCED_LOGGING=true

# === PERFORMANCE SETTINGS ===
MAX_CONCURRENT_TASKS=3
LEARNING_CYCLE_INTERVAL=3600
MEMORY_CLEANUP_INTERVAL=86400
MEMORY_LIMIT_MB=512
CPU_LIMIT_PERCENT=80

# === SOCKETIO CONFIGURATION ===
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25
SOCKETIO_LOGGING=false

# === ADVANCED FEATURES ===
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_FILE_LOGGING=false
